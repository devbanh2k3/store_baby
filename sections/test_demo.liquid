<style>
   .banner-section-continer {
        width: 100%;
         
    }

    .banner-section {
        text-align: center;
        width: 90%; /* Chiếm 80% chiều rộng */
        margin: 0 auto; /* Căn giữa section */
        display: flex;
        flex-wrap: wrap; /* Cho phép nội dung cuộn lại trên màn hình nhỏ */
    }

    .banner-large {
        border-radius: 10px; /* Bo góc cho ô */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng */
        margin-bottom: 20px;
      
        background-color: #4CAF50; /* Màu xanh lá cây */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng trên màn hình lớn */
        padding: 0; /* Bỏ padding để hình ảnh full */
        position: relative; /* Để có thể định vị chữ bên trong */
        overflow: hidden; /* Giấu phần ngoài */
    }

    .banner-large img {
        width: 100%; /* Đảm bảo hình ảnh chiếm toàn bộ chiều rộng */
        height: 100%; /* Đảm bảo hình ảnh chiếm toàn bộ chiều cao */
        object-fit: cover; /* Giữ tỷ lệ hình ảnh và chiếm toàn bộ không gian */
    }

    .featured-content {
        position: absolute; /* Định vị nội dung */
        top: 50%; /* Căn giữa theo chiều dọc */
        left: 50%; /* Căn giữa theo chiều ngang */
        transform: translate(-50%, -50%); /* Giúp căn giữa chính xác */
        text-align: center; /* Căn giữa chữ */
        color: white; /* Màu chữ */
    }

    .banner-small-container {
        margin-left:20px;
        display: flex;
        flex-wrap: wrap; /* Cho phép cuộn lại trên màn hình nhỏ */
        flex: 0 0 45%; /* Chiếm 50% chiều rộng */
        justify-content: space-between; /* Căn giữa các ô nhỏ */
        
    }

    .banner-small {
        background-color: #2196F3; /* Màu xanh dương */
        flex: 0 0 calc(50% - 10px); /* Chiếm 50% chiều rộng trong mỗi hàng, trừ khoảng cách */
        margin-bottom: 20px; /* Khoảng cách giữa các hàng */
        padding: 0; /* Bỏ padding để hình ảnh full */
        position: relative; /* Để định vị nội dung bên trong */
        overflow: hidden; /* Giấu phần ngoài */
        border-radius: 10px; /* Bo góc cho ô */
      
      box-shadow:0 0 25px rgba(var(188,188,188), .4);
        transition: box-shadow 0.3s ease; /* Hiệu ứng khi hover */
    }

    .banner-small:hover {
        
    }

    .banner-small img {
        width: 100%; /* Đảm bảo hình ảnh chiếm toàn bộ chiều rộng */
        height: 100%; /* Đảm bảo hình ảnh chiếm toàn bộ chiều cao */
        object-fit: cover; /* Giữ tỷ lệ hình ảnh và chiếm toàn bộ không gian */
    }

    .small-content h3{
        position: absolute; /* Định vị nội dung */
    top: 20px; /* Cách đỉnh 20px */
    left: 20px; /* Cách trái 20px */
    color: white; /* Màu chữ */
    display: flex; /* Sử dụng flexbox */
    flex-direction: column; /* Sắp xếp theo cột */
    }
    a{
         text-decoration: none !important;
     
    }
    .link {
       cursor: pointer;
    display: inline-block;
    border: none;
    box-shadow: none;
    text-decoration: none;
    /* text-underline-offset: 0.3rem; */
    color: rgb(var(--color-link));
    background-color: transparent;
     font-size:40px; /* Kích thước chữ giống h3, điều chỉnh theo ý muốn */
    font-weight: bold;
    font-family: inherit;
      
        position: absolute; /* Định vị link */
        bottom: 30px; /* Cách đáy 20px */
        left: -100%; /* Bắt đầu từ bên trái */
        transition: left 0.3s ease; /* Hiệu ứng chuyển động */
        color: #fff; /* Màu chữ link */
      
    }

    .banner-small:hover .link {
        left: 20px; /* Xuất hiện khi hover */
        text-decoration: none;
      
    }

    /* Responsive Styles */
    @media (max-width: 1024px) {
        .banner-large {
            flex: 0 0 100%; /* Chiếm toàn bộ chiều rộng trên tablet */
        }

        .banner-small {
            flex: 0 0 100%; /* Hai banner nhỏ mỗi hàng trên tablet */
        }

         .banner-small-container {
            margin-left:0px;
        display: flex;
        flex-wrap: wrap; /* Cho phép cuộn lại trên màn hình nhỏ */
        flex: 0 0 100%; /* Chiếm 50% chiều rộng */
        justify-content: space-between; /* Căn giữa các ô nhỏ */
        }
        .banner-small {
        background-color: #2196F3; /* Màu xanh dương */
        flex: 0 0 calc(50% - 10px); /* Chiếm 50% chiều rộng trong mỗi hàng, trừ khoảng cách */
        margin-bottom: 20px; /* Khoảng cách giữa các hàng */
