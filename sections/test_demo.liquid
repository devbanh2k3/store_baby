<style>
    .banner-section {
        display: flex;
    }

    .banner-large {
        background-color: #4CAF50; /* Màu xanh lá cây */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng */
        padding: 20px;
        text-align: center;
        color: white;
    }

    .banner-large img {
        max-width: 100%; /* Đảm bảo hình ảnh vừa với container */
        height: auto; /* Giữ tỷ lệ khung hình */
    }

    .banner-small-container {
        display: flex;
        flex-wrap: wrap;
        flex: 0 0 50%; /* Chiếm 50% chiều rộng */
    }

    .banner-small {
        background-color: #2196F3; /* Màu xanh dương */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng trong mỗi hàng */
        padding: 20px;
        text-align: center;
        color: white;
    }

    .banner-small img {
        max-width: 100%; /* Đảm bảo hình ảnh vừa với container */
        height: auto; /* Giữ tỷ lệ khung hình */
    }

    .featured-content {
        margin: auto; /* Căn giữa nội dung */
    }

    .link {
        color: #fff; /* Màu chữ link */
        text-decoration: underline; /* Gạch chân chữ link */
    }
</style>

<div class="banner-section">
