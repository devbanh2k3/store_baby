<style>
    .banner-section {
        display: flex;
        flex-wrap: wrap; /* Cho phép nội dung cuộn lại trên màn hình nhỏ */
    }

    .banner-large {
        background-color: #4CAF50; /* Màu xanh lá cây */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng trên màn hình lớn */
        padding: 20px;
        text-align: center;
        color: white;
        position: relative; /* Để có thể định vị chữ bên trong */
    }

    .banner-large img {
        max-width: 100%; /* Đảm bảo hình ảnh vừa với container */
        height: auto; /* Giữ tỷ lệ khung hình */
    }

    .featured-content {
        position: absolute; /* Định vị nội dung */
        top: 50%; /* Căn giữa theo chiều dọc */
        left: 50%; /* Căn giữa theo chiều ngang */
        transform: translate(-50%, -50%); /* Giúp căn giữa chính xác */
        text-align: center; /* Căn giữa chữ */
        color: white; /* Màu chữ */
    }

    .banner-small-container {
        display: flex;
        flex-wrap: wrap; /* Cho phép cuộn lại trên màn hình nhỏ */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng */
    }

    .banner-small {
        background-color: #2196F3; /* Màu xanh dương */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng trong mỗi hàng */
        padding: 20px;
        text-align: center;
        color: white;
        position: relative; /* Để định vị nội dung bên trong */
    }

    .banner-small img {
        max-width: 100%; /* Đảm bảo hình ảnh vừa với container */
        height: auto; /* Giữ tỷ lệ khung hình */
    }

    .small-content {
        position: absolute; /* Định vị nội dung */
        bottom: 20px; /* Cách đáy 20px */
        left: 50%; /* Căn giữa theo chiều ngang */
        transform: translateX(-50%); /* Giúp căn giữa chính xác */
        text-align: center; /* Căn giữa chữ */
        color: white; /* Màu chữ */
    }

    @media (max-width: 768px) {
        .banner-large {
            flex: 0 0 100%; /* Chiếm toàn bộ chiều rộng trên màn hình nhỏ */
        }

        .banner-small {
            flex: 0 0 100%; /* Chiếm toàn bộ chiều rộng trên màn hình nhỏ */
        }
    }
</style>

<div class="banner-section">
