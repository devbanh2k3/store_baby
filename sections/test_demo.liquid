<style>
    .banner-section {
        display: flex;
    }
    .banner-large {
        background-color: #4CAF50; /* Màu xanh lá cây */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng */
        padding: 20px;
        text-align: center;
        color: white;
    }
    .banner-large img {
        max-width: 100%; /* Đảm bảo hình ảnh vừa với container */
        height: auto; /* Giữ tỷ lệ khung hình */
    }
    .banner-small-container {
        display: flex;
        flex-wrap: wrap;
        flex: 0 0 50%; /* Chiếm 50% chiều rộng */
    }
    .banner-small {
        background-color: #2196F3; /* Màu xanh dương */
        flex: 0 0 50%; /* Chiếm 50% chiều rộng trong mỗi hàng */
        padding: 20px;
        text-align: center;
        color: white;
    }
    .banner-small img {
        max-width: 100%; /* Đảm bảo hình ảnh vừa với container */
        height: auto; /* Giữ tỷ lệ khung hình */
    }
    .featured-content {
        margin: auto; /* Căn giữa nội dung */
    }
    .link {
        color: #fff; /* Màu chữ link */
        text-decoration: underline; /* Gạch chân chữ link */
    }
</style>

<div class="banner-section">
    <div class="banner-large">
        <img src="{{ settings.large_image }}" alt="{{ settings.large_image_alt }}">
        <div class="featured-content">
            <h3>{{ settings.large_title }}</h3>
            <a class="link" href="{{ settings.large_link }}">{{ settings.large_link_text }}</a>
        </div>
    </div>
    <div class="banner-small-container">
        {% for small_banner in settings.small_banners %}
        <div class="banner-small">
            <img src="{{ small_banner.image }}" alt="{{ small_banner.alt }}">
            <h3>{{ small_banner.title }}</h3>
            <a class="link" href="{{ small_banner.link }}">{{ small_banner.link_text }}</a>
        </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Banner Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "large_image",
            "label": "Large Image"
        },
        {
            "type": "text",
            "id": "large_image_alt",
            "label": "Large Image Alt Text"
        },
        {
            "type": "text",
            "id": "large_title",
            "label": "Large Title"
        },
        {
            "type": "url",
            "id": "large_link",
            "label": "Large Link"
        },
        {
            "type": "text",
            "id": "large_link_text",
            "label": "Large Link Text"
        }
    ],
    "blocks": [
        {
            "type": "small_banner",
            "name": "Small Banner",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Small Banner Image"
                },
                {
                    "type": "text",
                    "id": "alt",
                    "label": "Image Alt Text"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Banner Title"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Banner Link"
                },
                {
                    "type": "text",
                    "id": "link_text",
                    "label": "Link Text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Default",
            "category": "Custom"
        }
    ]
}
{% endschema %}
